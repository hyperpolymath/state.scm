{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://state.scm/schema/v2.0/state.schema.json",
  "title": "STATE Format Schema",
  "description": "JSON Schema for STATE (Stateful Context Tracking Engine) files - validates the JSON binding of STATE format",
  "type": "object",
  "required": ["metadata", "user", "session", "focus", "projects"],
  "properties": {
    "metadata": {
      "$ref": "#/$defs/metadata"
    },
    "user": {
      "$ref": "#/$defs/user"
    },
    "session": {
      "$ref": "#/$defs/session"
    },
    "focus": {
      "$ref": "#/$defs/focus"
    },
    "projects": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/project"
      },
      "description": "Complete project catalog"
    },
    "criticalNext": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Prioritized list of immediate actions"
    },
    "issues": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/issue"
      },
      "description": "Known issues and limitations"
    },
    "questions": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/question"
      },
      "description": "Pending decisions requiring input"
    },
    "roadmap": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/roadmapPhase"
      },
      "description": "Long-term project planning"
    },
    "history": {
      "$ref": "#/$defs/history"
    },
    "filesCreatedThisSession": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Files created during current session"
    },
    "filesModifiedThisSession": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Files modified during current session"
    },
    "contextNotes": {
      "type": ["string", "null"],
      "description": "Free-form context summary"
    }
  },
  "$defs": {
    "metadata": {
      "type": "object",
      "required": ["formatVersion", "schemaVersion", "createdAt", "lastUpdated"],
      "properties": {
        "formatVersion": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$",
          "description": "Semantic version of the STATE format specification"
        },
        "schemaVersion": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
          "description": "ISO 8601 date of schema revision"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of file creation"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of last modification"
        },
        "generator": {
          "type": "string",
          "description": "Identifier of the generating system"
        }
      }
    },
    "user": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Display name of the user"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "User's roles in the project context"
        },
        "preferences": {
          "$ref": "#/$defs/preferences"
        }
      }
    },
    "preferences": {
      "type": "object",
      "properties": {
        "languagesPreferred": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Programming languages the user prefers"
        },
        "languagesAvoid": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Languages to avoid suggesting"
        },
        "toolsPreferred": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Preferred development tools"
        },
        "values": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Guiding principles and values"
        }
      }
    },
    "session": {
      "type": "object",
      "required": ["conversationId", "startedAt"],
      "properties": {
        "conversationId": {
          "type": "string",
          "description": "Unique identifier for the conversation"
        },
        "startedAt": {
          "type": "string",
          "format": "date-time",
          "description": "When this session began"
        },
        "messagesUsed": {
          "type": "integer",
          "minimum": 0,
          "description": "Count of messages exchanged"
        },
        "messagesRemaining": {
          "type": "integer",
          "minimum": 0,
          "description": "Estimated remaining capacity"
        },
        "tokenLimitReached": {
          "type": "boolean",
          "description": "Whether context limit was hit"
        }
      }
    },
    "focus": {
      "type": "object",
      "required": ["currentProject"],
      "properties": {
        "currentProject": {
          "type": "string",
          "description": "Name of the active project"
        },
        "currentPhase": {
          "type": ["string", "null"],
          "description": "Current development phase"
        },
        "deadline": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Hard deadline if any"
        },
        "blockingProjects": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Projects blocking current focus"
        }
      }
    },
    "project": {
      "type": "object",
      "required": ["name", "status", "completion", "dependencies", "blockers", "next"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Unique project identifier"
        },
        "status": {
          "type": "string",
          "enum": ["in-progress", "blocked", "paused", "complete", "abandoned"],
          "description": "Current project status"
        },
        "completion": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Percentage complete (0-100)"
        },
        "category": {
          "type": "string",
          "description": "Project category/domain"
        },
        "phase": {
          "type": "string",
          "description": "Current phase identifier"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Projects this depends on"
        },
        "blockers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Current blocking issues"
        },
        "next": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Prioritized next actions"
        },
        "chatReference": {
          "type": ["string", "null"],
          "description": "Related conversation ID"
        },
        "notes": {
          "type": "string",
          "description": "Free-form notes"
        }
      }
    },
    "issue": {
      "type": "object",
      "required": ["id", "severity", "title", "description", "status"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Z]+-[0-9]+$",
          "description": "Unique issue identifier (e.g., ISSUE-001)"
        },
        "severity": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low", "info"],
          "description": "Impact level"
        },
        "title": {
          "type": "string",
          "description": "Brief description"
        },
        "description": {
          "type": "string",
          "description": "Detailed explanation"
        },
        "workaround": {
          "type": "string",
          "description": "Temporary solution"
        },
        "status": {
          "type": "string",
          "description": "Current issue status"
        }
      }
    },
    "question": {
      "type": "object",
      "required": ["id", "priority", "question"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^Q-[0-9]+$",
          "description": "Unique question identifier"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"],
          "description": "Urgency level"
        },
        "question": {
          "type": "string",
          "description": "The question text"
        },
        "context": {
          "type": "string",
          "description": "Background information"
        },
        "options": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Available choices"
        }
      }
    },
    "roadmapPhase": {
      "type": "object",
      "required": ["phase", "status", "goals"],
      "properties": {
        "phase": {
          "type": "string",
          "description": "Phase name/identifier"
        },
        "status": {
          "type": "string",
          "enum": ["complete", "current", "next", "future", "vision"],
          "description": "Phase status"
        },
        "goals": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Phase objectives"
        }
      }
    },
    "history": {
      "type": "object",
      "properties": {
        "snapshots": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/snapshot"
          },
          "description": "Historical completion snapshots"
        }
      }
    },
    "snapshot": {
      "type": "object",
      "required": ["timestamp", "projects"],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "When snapshot was taken"
        },
        "projects": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "completion"],
            "properties": {
              "name": {
                "type": "string"
              },
              "completion": {
                "type": "integer",
                "minimum": 0,
                "maximum": 100
              }
            }
          },
          "description": "Project completion values at snapshot time"
        }
      }
    }
  }
}
